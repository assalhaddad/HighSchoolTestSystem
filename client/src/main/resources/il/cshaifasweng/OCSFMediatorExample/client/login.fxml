                        <Insets left="250.0" top="10.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
        <Label fx:id="usernameLbl" layoutX="103.0" layoutY="144.0" text="Username:">
            <font>
                <Font name="System Bold Italic" size="20.0" />
            </font>
        </Label>
        <Label fx:id="passwordLbl" layoutX="103.0" layoutY="234.0" text="Password:">
            <font>
                <Font name="System Bold Italic" size="20.0" />
            </font>
        </Label>
        <TextField fx:id="usernameTxt" layoutX="213.0" layoutY="137.0">
            <font>
                <Font size="20.0" />
            </font>
        </TextField>
        <TextField fx:id="passwordTxt" layoutX="213.0" layoutY="227.0">
            <font>
                <Font size="20.0" />
            </font>
        </TextField>
        <Button fx:id="loginBtn" layoutX="472.0" layoutY="292.0" mnemonicParsing="false" onAction="#checkLogin" style="-fx-background-color: #70879d;" text="Log in" textFill="WHITE">
