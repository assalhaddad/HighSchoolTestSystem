        <HBox fx:id="loginHbox" prefHeight="67.0" prefWidth="600.0" style="-fx-background-color: #8DA9C5;">
            <children>
                <Label fx:id="loginLbl" alignment="CENTER" contentDisplay="CENTER" text="Log in" textFill="WHITE">
